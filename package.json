{
  "name": "consigliere",
  "version": "1.0.0",
  "description": "Financial Consigliere",
  "main": "app/server/main.js",
  "scripts": {
    "start": "nodemon app/server/main.js",
    "test": "NODE_ENV=testing jest",
    "build": "./node_modules/webpack/bin/webpack.js",
    "coveralls": "cat ./app/public/coverage/lcov.info | coveralls",
    "dev-build": "npm run build -- --watch",
    "dev-test": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atikenny/consigliere.git"
  },
  "keywords": [
    "cooking",
    "food"
  ],
  "author": "Attila Bartha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atikenny/consigliere/issues"
  },
  "homepage": "https://github.com/atikenny/consigliere#readme",
  "dependencies": {
    "express": "^4.15.4",
    "prop-types": "^15.5.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.7",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.3.0",
    "eslint": "^4.6.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-react": "^7.3.0",
    "file-loader": "^1.1.11",
    "jest": "^22.4.2",
    "jest-css-modules": "^1.1.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.0",
    "react-test-renderer": "^16.2.0",
    "regenerator-runtime": "^0.11.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.3",
    "webpack": "^4.1.1"
  },
  "jest": {
    "rootDir": "./app",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/test-helpers/jest.transform.js",
      "^.+\\.scss$": "jest-css-modules"
    },
    "moduleNameMapper": {
      "\\.(eot|otf|webp|svg|ttf|woff|woff2|html)$": "<rootDir>/test-helpers/file-mock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "scss"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "modulePathIgnorePatterns": [
      "styles"
    ],
    "collectCoverage": true,
    "coverageDirectory": "public/coverage",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/index.js",
      "!**/components/main.jsx",
      "!**/node_modules/**",
      "!**/public/**",
      "!**/test-helpers/**",
      "!**/server/**",
      "!**/containers/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "mapCoverage": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "indent": [
        "error",
        4,
        {
          "SwitchCase": 1
        }
      ],
      "no-case-declarations": [
        "off"
      ],
      "max-len": [
        "error",
        100
      ]
    }
  }
}
